{
  "name": "tall-plugin-meta-refresh",
  "version": "1.0.0",
  "description": "Tall plugin for following redirects in <meta http-equiv=\"refresh\"> tags",
  "type": "module",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "exports": {
    "import": "./lib/esm/index.js",
    "require": "./lib/cjs/index.js"
  },
  "files": [
    "lib/",
    "!lib/**/*.test*"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && echo '{\"type\":\"commonjs\"}' > lib/cjs/package.json",
    "build:test": "node test/commonjs.cjs && node test/esm.js",
    "prepublish": "npm run build",
    "prepare": "npm run build",
    "test:lint": "eslint .",
    "test": "npm run test:lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmammino/tall.git"
  },
  "author": {
    "name": "Karl Horky",
    "url": "https://github.com/karlhorky"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lmammino/tall/issues"
  },
  "homepage": "https://github.com/lmammino/tall#readme",
  "keywords": [
    "URL",
    "shortner",
    "unshortner",
    "expander",
    "tall",
    "tall plugin",
    "meta",
    "meta refresh",
    "http-equiv",
    "link",
    "expand link",
    "expand url",
    "promise",
    "no depenencies",
    "no dependency",
    "typescript"
  ],
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "codecov": "^3.8.1",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "jest": "^27.5.1",
    "nock": "^13.0.6",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "htmlparser2": "^8.0.1"
  },
  "peerDependencies": {
    "tall": ">=5.0.0"
  }
}
